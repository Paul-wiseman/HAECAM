<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HAEMCAM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>


    </style>

    <style name="Theme.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" >@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <item name="android:fillViewport">true</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/purple_500</item>
        <!-- Customize theme for input layout cursor. -->
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>
    </style>

    <style name="Theme.FullScreen.Translucent" parent="Theme.FullScreen">
        <!-- Status bar color. -->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="HomeAcivity.Theme" parent="Theme.FullScreen">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l" >@color/primaryVariant</item>
        <item name="android:navigationBarColor">@color/primaryVariant</item>
    </style>

    <style name="EditNoUnderlineTheme" parent="HomeAcivity.Theme">
        <item name="android:candidatesTextStyleSpans"><b><i>candidates</i></b></item>
        <item name="android:background">@drawable/rounded_corner_light_grey</item>
    </style>
    <style name="EditTextCustomStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="TextInputLayout.LabelWhiteApp" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance"
        parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextInputLayout.LabelPrimaryApp" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelPrimaryApp</item>
    </style>

    <style name="AppTheme.TextFloatLabelPrimaryApp"
        parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense</item>
    </style>

    <style name="TitleTextViewStyle" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/rounded_corner_primary_purple</item>
    </style>

    <style name="SlyCalendarViewTimeTextTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/primaryVariant</item>
        <item name="colorControlNormal">@color/primaryVariant</item>
        <item name="colorControlActivated">@color/primaryVariant</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryVariant</item>
        <item name="selectedColor">@color/primaryVariant</item>
    </style>

</resources>