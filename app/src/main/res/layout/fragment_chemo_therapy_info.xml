<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:padding="@dimen/_20sdp"
        tools:context=".ui.medication.ChemoTherapyInfo">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/chemotherapy"/>

        <ng.com.thewhitecellfoundation.common.views.RingView
            android:id="@+id/ring_view_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:outer_color="@color/primaryColor"
            app:inner_color="@color/haecamCream"
            app:size="55dp"
            android:elevation="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv"

            />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="2dp"
            android:layout_height="@dimen/_200sdp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@id/ring_view_heading"
            app:layout_constraintEnd_toEndOf="@id/ring_view_heading"
            app:layout_constraintTop_toTopOf="@id/ring_view_heading"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <View
            android:id="@+id/text_heading_bg_view"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/haecamGrey"
            app:layout_constraintTop_toTopOf="@id/horizontal_line"
            app:layout_constraintStart_toEndOf="@id/horizontal_line"
            />

        <TextView
            android:id="@+id/chemo_drug_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_heading_bg_view"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/text_heading_bg_view"
            app:layout_constraintBottom_toBottomOf="@id/text_heading_bg_view"
            android:text="@string/dash"/>


        <ng.com.thewhitecellfoundation.common.views.RingView
            android:id="@+id/ring_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:outer_color="@color/primaryColor"
            app:inner_color="@color/haecamCream"
            app:size="35dp"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@id/horizontal_line"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_line"
            app:layout_constraintStart_toStartOf="@id/ring_view_heading"
            app:layout_constraintEnd_toEndOf="@id/ring_view_heading"
            app:layout_constraintVertical_bias="0.35"
            />
        <View
            android:id="@+id/text_bg_view2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/haecamGrey"
            app:layout_constraintTop_toTopOf="@id/ring_view2"
            app:layout_constraintBottom_toBottomOf="@id/ring_view2"
            app:layout_constraintStart_toEndOf="@id/ring_view_heading"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/chemo_drug_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_bg_view2"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/text_bg_view2"
            app:layout_constraintBottom_toBottomOf="@id/text_bg_view2"
            android:text="@string/dash"/>
        <ng.com.thewhitecellfoundation.common.views.RingView
            android:id="@+id/ring_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:outer_color="@color/primaryColor"
            app:inner_color="@color/haecamOrange"
            app:size="35dp"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@id/horizontal_line"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_line"
            app:layout_constraintStart_toStartOf="@id/ring_view_heading"
            app:layout_constraintEnd_toEndOf="@id/ring_view_heading"
            app:layout_constraintVertical_bias=".65"
            />
        <View
            android:id="@+id/text_bg_view3"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/haecamGrey"
            app:layout_constraintTop_toTopOf="@id/ring_view3"
            app:layout_constraintBottom_toBottomOf="@id/ring_view3"
            app:layout_constraintStart_toEndOf="@id/ring_view_heading"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/chemo_drug_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_bg_view3"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/text_bg_view3"
            app:layout_constraintBottom_toBottomOf="@id/text_bg_view3"
            android:text="@string/dash"/>

        <ng.com.thewhitecellfoundation.common.views.RingView
            android:id="@+id/ring_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:outer_color="@color/primaryColor"
            app:inner_color="@color/haecamOrange"
            app:size="35dp"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@id/horizontal_line"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_line"
            app:layout_constraintStart_toStartOf="@id/ring_view_heading"
            app:layout_constraintEnd_toEndOf="@id/ring_view_heading"
            app:layout_constraintVertical_bias=".95"
            />
        <View
            android:id="@+id/text_bg_view4"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/haecamGrey"
            app:layout_constraintTop_toTopOf="@id/ring_view4"
            app:layout_constraintBottom_toBottomOf="@id/ring_view4"
            app:layout_constraintStart_toEndOf="@id/ring_view_heading"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/chemo_drug_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_bg_view4"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/text_bg_view4"
            app:layout_constraintBottom_toBottomOf="@id/text_bg_view4"
            android:text="@string/dash"/>

        <TextView
            android:id="@+id/schedule_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/horizontal_line"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:text="@string/schedule_next_treatment"/>

        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/schedule_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:theme="@style/CalenderViewCustom"
            android:dateTextAppearance="@style/CalenderViewDateCustomText"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
