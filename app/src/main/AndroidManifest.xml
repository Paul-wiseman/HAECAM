<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ng.com.thewhitecellfoundation.haemcam">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FullScreen.Translucent">
        <activity
            android:name=".ui.bio.BioActivity"
            android:label="@string/title_activity_bio"
            android:theme="@style/HomeAcivity.Theme" >

        </activity>
        <activity android:name=".ui.home.HomeActivity"
            android:theme="@style/HomeAcivity.Theme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.SplashScreen"
            android:theme="@style/Theme.FullScreen">

        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>